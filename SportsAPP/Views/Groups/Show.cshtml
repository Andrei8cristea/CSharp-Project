@inject UserManager<ApplicationUser> UserManager
@model SportsAPP.Models.Group

@{
    ViewData["Title"] = Model.Name;
    var isMember = ViewBag.IsMember ?? false;
    var isModerator = ViewBag.IsModerator ?? false;
    var hasPendingRequest = ViewBag.HasPendingRequest ?? false;
    var currentUserId = ViewBag.CurrentUserId;
}

<style>
    .chat-container {
        height: calc(100vh - 200px);
        display: flex;
        flex-direction: column;
    }
    
    .messages-area {
        flex: 1;
        overflow-y: auto;
        padding: 1rem;
        background: #f8f9fa;
    }
    
    .message {
        margin-bottom: 1rem;
        display: flex;
        gap: 0.75rem;
    }
    
    .message-content {
        background: white;
        padding: 0.75rem;
        border-radius: 12px;
        max-width: 70%;
        box-shadow: 0 1px 2px rgba(0,0,0,0.1);
    }
    
    .my-message .message-content {
        background: #4F46E5;
        color: white;
        margin-left: auto;
    }
    
    .message-header {
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }
    
    .message-time {
        font-size: 0.75rem;
        opacity: 0.7;
        margin-top: 0.25rem;
    }
    
    .message-input-area {
        padding: 1rem;
        background: white;
        border-top: 1px solid #dee2e6;
    }
    
    .member-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem;
        border-bottom: 1px solid #dee2e6;
    }
    
    .member-item:hover {
        background: #f8f9fa;
    }
    
    .moderator-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
    }
</style>

<div class="container-fluid mt-3">
    <div class="row">
        <!-- Sidebar - Members & Info -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" class="img-fluid rounded mb-3" alt="@Model.Name">
                    }
                    <h4>@Model.Name</h4>
                    <p class="text-muted">@Model.Description</p>
                    
                    <div class="d-flex justify-content-between mb-3">
                        <span><i class="bi bi-people me-1"></i>@Model.Members.Count(m => m.Status == SportsAPP.Models.MemberStatus.Approved) membri</span>
                        <span><i class="bi bi-calendar me-1"></i>@Model.CreatedAt.ToString("dd MMM yyyy")</span>
                    </div>

                    @if (!isMember && !hasPendingRequest)
                    {
                        <form asp-action="Join" method="post" class="mb-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Alătură-te
                            </button>
                        </form>
                    }
                    else if (hasPendingRequest)
                    {
                        <div class="alert alert-info text-center">
                            <i class="bi bi-clock me-1"></i> Cerere în așteptare
                        </div>
                    }
                    else if (isMember && !isModerator)
                    {
                        <form asp-action="Leave" method="post" class="mb-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Sigur vrei să părăsești grupul?')">
                                <i class="bi bi-box-arrow-left me-1"></i> Părăsește
                            </button>
                        </form>
                    }
                    else if (isModerator)
                    {
                        <form asp-action="Delete" method="post" class="mb-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Sigur vrei să ștergi acest grup? Toate mesajele vor fi șterse!')">
                                <i class="bi bi-trash me-1"></i> Șterge Grup
                            </button>
                        </form>
                    }
                </div>
            </div>

            <!-- Members List -->
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-people me-1"></i> Membri (@Model.Members.Count(m => m.Status == SportsAPP.Models.MemberStatus.Approved))</h6>
                </div>
                <div class="card-body p-0" style="max-height: 300px; overflow-y: auto;">
                    @foreach (var member in Model.Members.Where(m => m.Status == SportsAPP.Models.MemberStatus.Approved).OrderByDescending(m => m.Role))
                    {
                        <div class="member-item">
                            <div>
                                <strong>@member.User?.FullName</strong>
                                @if (member.Role == SportsAPP.Models.MemberRole.Moderator)
                                {
                                    <br/><span class="moderator-badge">MODERATOR</span>
                                }
                            </div>
                            @if (isModerator && member.UserId != Model.ModeratorId)
                            {
                                <form asp-action="Kick" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="groupId" value="@Model.Id" />
                                    <input type="hidden" name="userId" value="@member.UserId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Sigur vrei să elimini acest membru?')">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Join Requests (Moderator Only) -->
            @if (isModerator)
            {
                var pendingRequests = Model.Members.Where(m => m.Status == SportsAPP.Models.MemberStatus.Pending).ToList();
                if (pendingRequests.Any())
                {
                    <div class="card shadow-sm mt-3">
                        <div class="card-header bg-warning text-dark">
                            <h6 class="mb-0"><i class="bi bi-hourglass-split me-1"></i> Cereri (@pendingRequests.Count)</h6>
                        </div>
                        <div class="card-body p-0">
                            @foreach (var request in pendingRequests)
                            {
                                <div class="member-item">
                                    <div>
                                        <strong>@request.User?.FullName</strong><br/>
                                        <small class="text-muted">@request.JoinedAt.ToString("dd MMM HH:mm")</small>
                                    </div>
                                    <div>
                                        <form asp-action="ApproveJoin" method="post" class="d-inline me-1">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="memberId" value="@request.Id" />
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="bi bi-check-lg"></i>
                                            </button>
                                        </form>
                                        <form asp-action="RejectJoin" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="memberId" value="@request.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Main Chat Area -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-chat-dots me-2"></i>Chat Grup</h5>
                </div>

                @if (TempData.ContainsKey("message"))
                {
                    <div class="alert @(TempData.ContainsKey("messageType") ? TempData["messageType"] : "alert-success") alert-dismissible mb-0 rounded-0">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        @TempData["message"]
                    </div>
                }

                <div class="chat-container">
                    @if (isMember)
                    {
                        <!-- Messages Area -->
                        <div class="messages-area" id="messagesArea">
                            @if (Model.Messages != null && Model.Messages.Any())
                            {
                                @foreach (var message in Model.Messages)
                                {
                                    var isMyMessage = message.UserId == currentUserId;
                                    <div class="message @(isMyMessage ? "my-message" : "")">
                                        @if (!isMyMessage)
                                        {
                                            <div>
                                                <div class="tweet-avatar-placeholder" style="width: 40px; height: 40px;">
                                                    <i class="bi bi-person-fill text-white"></i>
                                                </div>
                                            </div>
                                        }
                                        <div class="message-content">
                                            @if (!isMyMessage)
                                            {
                                                <div class="message-header">@message.User?.FullName</div>
                                            }
                                            <div>@message.Content</div>
                                            <div class="message-time">
                                                @message.SentAt.ToString("HH:mm")
                                                @if (isMyMessage || isModerator)
                                                {
                                                    <span class="ms-2">
                                                        <a asp-controller="GroupMessages" asp-action="Edit" asp-route-id="@message.Id" class="text-decoration-none" style="opacity: 0.7;">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <form asp-controller="GroupMessages" asp-action="Delete" asp-route-id="@message.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-link btn-sm p-0 text-decoration-none" style="opacity: 0.7;" onclick="return confirm('Ștergi mesajul?')">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-muted py-5">
                                    <i class="bi bi-chat-dots" style="font-size: 3rem; opacity: 0.3;"></i>
                                    <p class="mt-2">Nu există mesaje încă. Fii primul care trimite un mesaj!</p>
                                </div>
                            }
                        </div>

                        <!-- Message Input -->
                        <div class="message-input-area">
                            <form asp-controller="GroupMessages" asp-action="Create" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="groupId" value="@Model.Id" />
                                <div class="input-group">
                                    <input type="text" name="content" class="form-control" placeholder="Scrie un mesaj..." required />
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-send-fill"></i> Trimite
                                    </button>
                                </div>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center" style="height: 100%;">
                            <div class="text-center">
                                <i class="bi bi-lock-fill" style="font-size: 4rem; opacity: 0.3;"></i>
                                <h5 class="mt-3">Alătură-te grupului pentru a vedea mesajele!</h5>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Scroll to bottom of messages
    window.addEventListener('load', function() {
        var messagesArea = document.getElementById('messagesArea');
        if (messagesArea) {
            messagesArea.scrollTop = messagesArea.scrollHeight;
        }
    });
</script>
