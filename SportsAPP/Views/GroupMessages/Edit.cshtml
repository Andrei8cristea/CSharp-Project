@model SportsAPP.Models.GroupMessage

@{
    ViewData["Title"] = "Editează Mesaj";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title mb-4">Editează Mesaj</h4>

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="GroupId" />

                        <div class="mb-3">
                            <label for="content" class="form-label">Mesaj</label>
                            <textarea name="content" class="form-control" rows="4" required>@Model.Content</textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i> Salvează
                            </button>
                            <a asp-controller="Groups" asp-action="Show" asp-route-id="@Model.GroupId" class="btn btn-outline-secondary">
                                Anulează
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
