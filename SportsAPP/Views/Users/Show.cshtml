@inject UserManager<ApplicationUser> UserManager
@model SportsAPP.Models.ApplicationUser

@inject SportsAPP.Data.ApplicationDbContext db
@{
    ViewData["Title"] = Model.FullName;
    var currentUserId = UserManager.GetUserId(User);
    var isOwnProfile = (bool)(ViewBag.IsOwnProfile ?? false);
    var canViewFull = (bool)(ViewBag.CanViewPosts ?? true);
    
    // Check follow status
    var isFollowing = (bool)(ViewBag.IsFollowing ?? false);
    var hasPendingRequest = (bool)(ViewBag.HasPendingRequest ?? false);
    var followsCurrentUser = false;
    
    if (!isOwnProfile && currentUserId != null)
    {
        followsCurrentUser = db.Follows.Any(f => f.FollowerId == Model.Id && f.FollowingId == currentUserId);
    }
}

<div class="container mt-4">
    <!-- Profile Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <!-- Profile Image -->
                        <div class="col-md-3 text-center mb-3 mb-md-0">
                            @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                            {
                                <img src="@Model.ProfileImagePath" 
                                     class="rounded-circle img-fluid shadow" 
                                     style="width: 150px; height: 150px; object-fit: cover; border: 4px solid #fff;" 
                                     alt="@Model.FullName" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-gradient d-inline-flex align-items-center justify-content-center shadow" 
                                     style="width: 150px; height: 150px; border: 4px solid #fff; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                    <i class="bi bi-person-fill text-white" style="font-size: 4rem;"></i>
                                </div>
                            }
                        </div>

                        <!-- Profile Info -->
                        <div class="col-md-9">
                            <div class="d-flex align-items-center flex-wrap mb-3">
                                <h2 class="mb-0 me-3">@Model.FullName</h2>
                                @if (Model.IsPublic)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success">
                                        <i class="bi bi-unlock"></i> Public
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-subtle text-secondary border border-secondary">
                                        <i class="bi bi-lock"></i> Privat
                                    </span>
                                }
                            </div>

                            <p class="text-muted mb-3">
                                <i class="bi bi-envelope-fill"></i> @Model.Email
                            </p>

                            @if (!string.IsNullOrEmpty(Model.ProfileDescription))
                            {
                                <p class="text-primary mb-3" style="max-width: 600px;">@Model.ProfileDescription</p>
                            }

                            <!-- Stats -->
                            @if (canViewFull)
                            {
                                <div class="d-flex gap-4 mb-3">
                                    <div>
                                        <strong class="fs-5">@Model.Posts.Count</strong>
                                        <span class="text-muted">postări</span>
                                    </div>
                                    <div>
                                        <a href="@Url.Action("Followers", "Follows", new { id = Model.Id })" class="text-decoration-none text-primary">
                                            <strong class="fs-5">@Model.FollowersCount</strong>
                                            <span class="text-muted">urmăritori</span>
                                        </a>
                                    </div>
                                    <div>
                                        <a href="@Url.Action("Following", "Follows", new { id = Model.Id })" class="text-decoration-none text-primary">
                                            <strong class="fs-5">@Model.FollowingCount</strong>
                                            <span class="text-muted">urmărește</span>
                                        </a>
                                    </div>
                                </div>
                            }

                            <!-- Action Buttons -->
                            <div class="mt-3">
                                @if (isOwnProfile)
                                {
                                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id" 
                                       class="btn btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Editează Profilul
                                    </a>
                                    <a asp-controller="Posts" asp-action="New" class="btn btn-primary">
                                        <i class="bi bi-plus-circle"></i> Postare Nouă
                                    </a>
                                }
                                else if (User.Identity!.IsAuthenticated)
                                {
                                    @if (isFollowing)
                                    {
                                        <!-- Following Button -->
                                        <form asp-controller="Follows" asp-action="Unfollow" asp-route-userId="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Sigur vrei să nu mai urmărești pe @Model.FullName?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-secondary">
                                                <i class="bi bi-person-check"></i> Urmărești
                                            </button>
                                        </form>
                                    }
                                    else if (hasPendingRequest)
                                    {
                                        <!-- Requested Button -->
                                        <form asp-controller="Follows" asp-action="CancelRequest" asp-route-userId="@Model.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-warning">
                                                <i class="bi bi-hourglass-split"></i> Cerere Trimisă
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <!-- Follow Button -->
                                        <form asp-controller="Follows" asp-action="Follow" asp-route-userId="@Model.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-primary">
                                                <i class="bi bi-person-plus"></i> 
                                                @if (followsCurrentUser)
                                                {
                                                    <text>Urmărește Înapoi</text>
                                                }
                                                else
                                                {
                                                    <text>Urmărește</text>
                                                }
                                            </button>
                                        </form>
                                    }
                                    
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id" 
                                           class="btn btn-warning">
                                            <i class="bi bi-shield"></i> Admin
                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Posts Section -->
    @if (canViewFull)
    {
        <div class="row">
            <div class="col-12">
                <div class="border-top pt-4">
                    <div class="d-flex justify-content-center mb-4">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-secondary active">
                                <i class="bi bi-grid-3x3"></i> POSTĂRI
                            </button>
                        </div>
                    </div>

                    @if (Model.Posts.Any())
                    {
                        <!-- Instagram-style Grid -->
                        <div class="row g-1">
                            @foreach (var post in Model.Posts.OrderByDescending(p => p.Date))
                            {
                                <div class="col-lg-4 col-md-6 col-sm-6">
                                    <a asp-controller="Posts" asp-action="Show" asp-route-id="@post.Id" 
                                       class="text-decoration-none d-block position-relative post-grid-item">
                                        <!-- Post Image/Video Preview -->
                                        @if (post.MediaType == MediaType.Image && !string.IsNullOrEmpty(post.MediaPath))
                                        {
                                            <img src="@post.MediaPath" 
                                                 class="w-100" 
                                                 style="aspect-ratio: 1; object-fit: cover;" 
                                                 alt="@post.Title" />
                                        }
                                        else if (post.MediaType == MediaType.Video && !string.IsNullOrEmpty(post.MediaPath))
                                        {
                                            <div class="w-100" style="aspect-ratio: 1; background: #000; position: relative;">
                                                <video style="width: 100%; height: 100%; object-fit: cover;">
                                                    <source src="@post.MediaPath" type="video/mp4">
                                                </video>
                                                <div class="position-absolute top-50 start-50 translate-middle">
                                                    <i class="bi bi-play-circle-fill text-white" style="font-size: 3rem; opacity: 0.9;"></i>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="w-100 d-flex align-items-center justify-content-center flex-column p-3 text-center" 
                                                 style="aspect-ratio: 1; background: var(--bg-tertiary); border: 1px solid var(--border-color);">
                                                <i class="bi bi-file-text" style="font-size: 2rem; color: var(--text-secondary); margin-bottom: 0.5rem;"></i>
                                                <div style="color: var(--text-primary); font-size: 0.875rem; line-height: 1.4; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical;">
                                                    <strong>@post.Title</strong>
                                                    @if (!string.IsNullOrEmpty(post.Content))
                                                    {
                                                        <br />
                                                        <span style="color: var(--text-secondary);">
                                                            @(post.Content.Length > 80 ? post.Content.Substring(0, 80) + "..." : post.Content)
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        }


                                        <!-- Hover Overlay -->
                                        <div class="post-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center">
                                            <div class="text-white text-center">
                                                <div class="mb-2">
                                                    <i class="bi bi-heart-fill me-1"></i> @post.LikesCount
                                                    <i class="bi bi-chat-fill ms-3 me-1"></i> @post.Comments.Count
                                                </div>
                                                <h6 class="text-truncate px-3">@post.Title</h6>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="bi bi-camera" style="font-size: 4rem; opacity: 0.3;"></i>
                            </div>
                            <h5>
                                @if (isOwnProfile)
                                {
                                    <text>Distribuie Prima Postare</text>
                                }
                                else
                                {
                                    <text>Nicio Postare Încă</text>
                                }
                            </h5>
                            <p class="text-muted">
                                @if (isOwnProfile)
                                {
                                    <text>Când distribui fotografii și videoclipuri, acestea vor apărea pe profilul tău.</text>
                                }
                                else
                                {
                                    <text>Când @Model.FirstName va distribui fotografii și videoclipuri, vei putea să le vezi aici.</text>
                                }
                            </p>
                            @if (isOwnProfile)
                            {
                                <a asp-controller="Posts" asp-action="New" class="btn btn-primary">
                                    Distribuie Prima Postare
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Private Profile Message -->
        <div class="row">
            <div class="col-12 text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-lock-fill" style="font-size: 4rem; opacity: 0.3;"></i>
                </div>
                <h5>Acest cont este privat</h5>
                <p class="text-muted">
                    Doar informațiile de bază sunt vizibile pentru acest profil.
                </p>
            </div>
        </div>
    }
</div>

@section Scripts {
    <style>
        .post-grid-item {
            overflow: hidden;
            transition: transform 0.2s ease;
        }
        
        .post-grid-item:hover {
            transform: scale(1.02);
            z-index: 1;
        }
        
        .post-overlay {
            background: rgba(0, 0, 0, 0.5);
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .post-grid-item:hover .post-overlay {
            opacity: 1;
        }

        .bg-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
    </style>
}
