@model SportsAPP.Models.ApplicationUser

@{
    ViewData["Title"] = "Editează Profilul";
}

<div class="container mt-4 fade-in">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg border-0">
                <div class="card-header" style="background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%); color: white;">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Editează Profilul</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <div class="mb-3">
                            <label for="FirstName" class="form-label">Prenume <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" required />
                        </div>

                        <div class="mb-3">
                            <label for="LastName" class="form-label">Nume <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" required />
                        </div>

                        <div class="mb-3">
                            <label for="ProfileDescription" class="form-label">Descriere Profil</label>
                            <textarea class="form-control" id="ProfileDescription" name="ProfileDescription" rows="4" placeholder="Spune-ne ceva despre tine...">@Model.ProfileDescription</textarea>
                            <small class="form-text text-muted">Maximum 500 caractere</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Vizibilitate Profil</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="IsPublic" id="publicProfile" value="true" @(Model.IsPublic ? "checked" : "") />
                                <label class="form-check-label" for="publicProfile">
                                    <i class="bi bi-unlock"></i> Public (toată lumea poate vedea postările tale)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="IsPublic" id="privateProfile" value="false" @(!Model.IsPublic ? "checked" : "") />
                                <label class="form-check-label" for="privateProfile">
                                    <i class="bi bi-lock"></i> Privat (doar informațiile de bază sunt vizibile)
                                </label>
                            </div>
                        </div>

                        @* Current profile image *@
                        @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                        {
                            <div class="mb-3">
                                <label class="form-label">Imagine Profil Actuală:</label>
                                <div>
                                    <img src="@Model.ProfileImagePath" class="rounded-circle" style="width: 100px; height: 100px; object-fit: cover;" alt="Current profile" />
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <label for="profileImage" class="form-label">
                                @(string.IsNullOrEmpty(Model.ProfileImagePath) ? "Încarcă" : "Schimbă") Imagine Profil
                            </label>
                            <input type="file" class="form-control" id="profileImage" name="profileImage" accept="image/*" />
                            <small class="form-text text-muted">
                                @(string.IsNullOrEmpty(Model.ProfileImagePath) ? "Alege o imagine pentru profilul tău" : "Lasă necompletat dacă vrei să păstrezi imaginea actuală")
                            </small>
                        </div>

                        @* Admin role selection *@
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="mb-3">
                                <label for="newRole" class="form-label">Rol Utilizator (Admin)</label>
                                <select class="form-select" id="newRole" name="newRole">
                                    <option value="">Selectează un rol...</option>
                                    @if (Model.AllRoles != null)
                                    {
                                        @foreach (var role in Model.AllRoles)
                                        {
                                            <option value="@role.Value" selected="@(role.Text == ViewBag.UserRole)">
                                                @role.Text
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                        }

                        <div class="d-flex gap-3 justify-content-between mt-4">
                            <button type="submit" class="btn btn-warning btn-lg flex-fill">
                                <i class="bi bi-check-circle me-2"></i>Salvează Modificările
                            </button>
                            <a asp-controller="Users" asp-action="Show" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg flex-fill">
                                <i class="bi bi-x-circle me-2"></i>Anulează
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
